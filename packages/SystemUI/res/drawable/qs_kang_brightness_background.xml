<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:tint="@color/qs_background_dark" android:thickness="@dimen/brightness_mirror_height">
            <solid android:color="@color/default_qs_transparency"/>
            <size android:height="@dimen/brightness_mirror_height" />
            <corners android:radius="?android:attr/dialogCornerRadius" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:tint="?android:attr/colorAccent" >
                <size android:height="@dimen/brightness_mirror_height" />
                <corners android:radius="?android:attr/dialogCornerRadius" />
            </shape>
        </scale>
    </item>

</layer-list> 
